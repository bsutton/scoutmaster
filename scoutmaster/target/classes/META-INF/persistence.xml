		<class>au.com.noojee.scouts.domain.ImportColumnFieldMapping</class>
		<class>au.com.noojee.scouts.domain.Note</class>
		<class>au.com.noojee.scouts.domain.Organisation</class>
		<class>au.com.noojee.scouts.domain.Qualification</class>
		<class>au.com.noojee.scouts.domain.QualificationType</class>
		<class>au.com.noojee.scouts.domain.Relationship</class>
		<class>au.com.noojee.scouts.domain.RelationshipType</class>
		<class>au.com.noojee.scouts.domain.School</class>
		<class>au.com.noojee.scouts.domain.Section</class>
		<class>au.com.noojee.scouts.domain.SectionMeeting</class>
		<class>au.com.noojee.scouts.domain.SectionMeetingDefaults</class>
		<class>au.com.noojee.scouts.domain.SectionTryout</class>
		<class>au.com.noojee.scouts.domain.SectionTryoutType</class>
		<class>au.com.noojee.scouts.domain.SectionType</class>
		<class>au.com.noojee.scouts.domain.SMSProvider</class>
		<class>au.com.noojee.scouts.domain.SMSProviderType</class>
		<class>au.com.noojee.scouts.domain.Tag</class>
		<class>au.com.noojee.scouts.domain.TransitionMember</class>
		<class>au.com.noojee.scouts.domain.access.Feature</class>
		<class>au.com.noojee.scouts.domain.access.Role</class>
		<class>au.com.noojee.scouts.domain.access.SessionHistory</class>
		<class>au.com.noojee.scouts.domain.access.User</class>
