<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

	<!-- Add standard Section Types -->
	<changeSet author="bsutton" id="1.0.8">
			<addColumn tableName="smsprovider">
			<column name="providerName" type="varchar(255)"/>
			<column name="description" type="varchar(255)"/>
			<column name="classPath" type="VARCHAR(1024)"/>
		</addColumn>
	
		<insert tableName="smsprovider">
			<column name="providerName" value="ClickATell" />
			<column name="DESCRIPTION" value="ClickATell SMS Provider" />
			<column name="classPath" value="au.org.scoutmaster.smsproviders.ClickATellProvider" />
			<column name="CONSISTENCYVERSION" valueNumeric="1" />
		</insert>
		
        <dropForeignKeyConstraint baseTableName="smsprovidertype" constraintName="FK_SMSPROVIDERTYPE_PROVIDER_ID"/>
        <dropForeignKeyConstraint  baseTableName="smsprovider" constraintName="FK_SMSPROVIDER_TYPE_ID" />
        
		<dropTable tableName="smsprovidertype"/>
	</changeSet>

</databaseChangeLog>
