<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="scoutmaster" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>org.scoutmaster.domain.Activity</class>
		<class>org.scoutmaster.domain.ActivityType</class>
		<class>org.scoutmaster.domain.Address</class>
		<class>org.scoutmaster.domain.Contact</class>
		<class>org.scoutmaster.domain.Event</class>
		<class>org.scoutmaster.domain.Household</class>
		<class>org.scoutmaster.domain.ImportUserMapping</class>
		<class>org.scoutmaster.domain.ImportColumnFieldMapping</class>
		<class>org.scoutmaster.domain.Note</class>
		<class>org.scoutmaster.domain.Organisation</class>
		<class>org.scoutmaster.domain.Phone</class>
		<class>org.scoutmaster.domain.Qualification</class>
		<class>org.scoutmaster.domain.QualificationType</class>
		<class>org.scoutmaster.domain.Relationship</class>
		<class>org.scoutmaster.domain.RelationshipType</class>
		<class>org.scoutmaster.domain.School</class>
		<class>org.scoutmaster.domain.Section</class>
		<class>org.scoutmaster.domain.SectionMeeting</class>
		<class>org.scoutmaster.domain.SectionMeetingDefaults</class>
		<class>org.scoutmaster.domain.SectionTryout</class>
		<class>org.scoutmaster.domain.SectionTryoutType</class>
		<class>org.scoutmaster.domain.SectionType</class>
		<class>org.scoutmaster.domain.SMSProvider</class>
		<class>org.scoutmaster.domain.SMSProviderType</class>
		<class>org.scoutmaster.domain.Tag</class>
		<class>org.scoutmaster.domain.TransitionMember</class>
		<class>org.scoutmaster.domain.access.Feature</class>
		<class>org.scoutmaster.domain.access.Role</class>
		<class>org.scoutmaster.domain.access.SessionHistory</class>
		<class>org.scoutmaster.domain.access.User</class>
		<class>org.scoutmaster.domain.accounting.CreditNote</class>
		<class>org.scoutmaster.domain.accounting.CreditNoteLine</class>
		<class>org.scoutmaster.domain.accounting.Invoice</class>
		<class>org.scoutmaster.domain.accounting.InvoiceLine</class>
		<class>org.scoutmaster.domain.accounting.Payment</class>
		<class>org.scoutmaster.domain.accounting.Product</class>

		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:mysql://localhost/scoutmaster?sessionVariables=storage_engine=InnoDB" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="++Ast810" />

			<!-- EclipseLink should create the database schema automatically -->
			<property name="eclipselink.ddl-generation" value="create-tables" />
			<property name="eclipselink.ddl-generation.output-mode"
				value="database" />
			<property name="eclipselink.orm.throw.exceptions" value="true" />
			<property name="eclipselink.logging.level" value="FINE" />
		</properties>
	</persistence-unit>
	
	<!--  UnitTest database -->
	<persistence-unit name="scoutmastertest" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>org.scoutmaster.domain.Activity</class>
